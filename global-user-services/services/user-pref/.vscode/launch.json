{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with ts-node-dev",
        "runtimeExecutable": "npx",
        "runtimeArgs": ["tsx"],
        "env": { "NODE_ENV": "dev" },
        "args": ["${workspaceFolder}/src/index.ts"],
        "cwd": "${workspaceFolder}",
        "sourceMaps": true,
        "outFiles": ["${workspaceFolder}/src/**/*.ts"]
      }
    ]
  }
  